@model IEnumerable<Vidly.Models.Customer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Registered Customers</h2>

<p>
    @Html.ActionLink("Create New", "Add", "Customers", null, new {@class = "btn btn-primary"})
</p>

@if (Model.Count() == 0)
{
    <p class="lead text-center">We don't have any Customer registered temporaly.</p>
}
else
{
    <table id="customers" class="table table-striped table-bordered table-responsive">
        <tr>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th class="text-center">
                Membership Type
            </th>
            <th class="text-center">
                Discount Rate
            </th>
            <th class="text-center">
                Options
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr class="text-center">
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @item.MembershipType.Name
                </td>
                <td>
                    @item.MembershipType.DiscountRate %
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new {id = item.Id}) -
                    @Html.ActionLink("Details", "Details", new {id = item.Id}) -
                    <button data-customer-id="@item.Id" class="js-delete"
                            style="background: none; border: none; padding: 0;">
                        <a>Delete</a>
                    </button>
                </td>
            </tr>
        }
    </table>
}

@section scripts
{
    <script>
        $(document).ready(function (){

            $("#customers").on("click", ".js-delete", function() {
                    var button = $(this);

                    bootbox.confirm("Are you sure you want to delete this customer?",
                        function(result) {
                            if (result) {
                                // We get deleted the Row with the Customer info
                                $.ajax({
                                    url: "api/customers/" + $(button).attr("data-customer-id"),
                                    method: "DELETE",
                                    success: function() {
                                        button.parents("tr").remove();
                                        console.log("Customer deleted successfully");
                                    }
                                });
                            }
                        });
                });
        });
    </script>
}